---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MasonryGrid from "../../components/gallery/MasonryGrid.astro";
import { voyageImages } from "../../data/voyageImages";
---

<BaseLayout
	title="Gallery | NUS Seafarers"
	description="Showcasing our Travels"
>
	<div class="min-h-[90vh] px-4 py-12 md:px-12 md:py-8">
		<h1 class="text-4xl font-bold text-neutral-900 mb-4">Gallery</h1>
		<p class="text-lg text-neutral-700 font-medium mb-6">Showcasing our travels.</p>
		<MasonryGrid images={voyageImages} />
	</div>
</BaseLayout>

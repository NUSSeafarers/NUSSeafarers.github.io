---
const { title = 'Untitled Page' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="font-sans bg-white text-gray-900">
    <slot name="header" />
    <main class="p-4">
      <slot /> <!-- page content goes here -->
    </main>
    <slot name="footer" />
  </body>
</html>
